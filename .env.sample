# Reltio MCP Clients Environment Variables
# Copy this file to .env and fill in your actual values

# === Reltio OAuth Configuration ===
# OAuth client credentials for Reltio authentication
OAUTH_CLIENT_ID=your_oauth_client_id
OAUTH_CLIENT_SECRET=your_oauth_client_secret

# === Reltio MCP Configuration ===
# Tenant environment - determines the MCP endpoint
# Options: dev, test, 361, test-usg, prod-usg, gus-training, gus-sales, mpe-01, mpe-02, etc.
TENANT_ENVIRONMENT=dev

# Your Reltio tenant ID
RELTIO_TENANT_ID=your_tenant_id

# === AI Model Configuration ===
# API Keys (at least one required)
# OpenAI is preferred if both are present
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# Model settings
MODEL_ID=gpt-4.1
MODEL_TEMPERATURE=0.7
MODEL_MAX_TOKENS=4096

# === Example Values ===
# MODEL_ID options:
#   OpenAI: gpt-4.1, gpt-4o, gpt-3.5-turbo, etc.
#   Anthropic: claude-3-5-sonnet-20241022, claude-3-opus-20240229, etc.
#
# MODEL_TEMPERATURE: 0.0 (deterministic) to 1.0 (creative), default 0.7
# MODEL_MAX_TOKENS: Maximum tokens for response, default 4096
